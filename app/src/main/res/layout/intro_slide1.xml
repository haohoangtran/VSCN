<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dot_dark_screen1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/intro1_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/nvs1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/intro1_title"
            android:textSize="22sp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:layout_centerHorizontal="true"
            android:text="Chuẩn bị:\nDụng cụ . Gồm biển cảnh báo, xe lau ,cây lau sàn ,xô chứa nước ,bàn chải cọ toilet, bộ lau kính, gắng tay ,khẩu trang ,túi rác ,giấy vệ sinh ,khăn lau. Hóa chất: lau kính ,lau sàn ,hc :cọ bồn cầu v.v."
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/intro1_content"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro1_title"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Yêu cầu: Dụng cụ làm việc phải đẩy đủ ,gọn gang ,sạch sẽ, hóa chất phải đúng chủng loại .bình đựng hóa chất phải có nhán mác ghi tên hóa chất "
            android:textSize="19dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/intro1_waves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/waves_image" />

    </RelativeLayout>

</RelativeLayout>