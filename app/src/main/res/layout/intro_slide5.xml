<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/intro1_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_16"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/nvs5" />

        <TextView
            android:id="@+id/intro1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro1_logo"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_8"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Bước 6 :\nKiểm tra giây vệ sinh và xà phòng rửa tay .thay giây cho những hộp hết giấy ,đổ thêm xã phòng rửa tay vào bình  nếu hết ."
            android:textStyle="bold" />

        <TextView
            android:id="@+id/intro1_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro1_title"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_8"
            android:layout_marginTop="16dp"
            android:text="Yêu cầu:\nGương , vòi inox sáng ,bóng và  không còn cặn nước ,bồn rửa mặt phải khô  "
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/intro1_waves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/waves_image" />

    </RelativeLayout>

</RelativeLayout>