<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="7dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/v_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            app:srcCompat="@drawable/ic_title_black_24dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_toEndOf="@id/v_tt"
            android:text="Giay ve sinh"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginEnd="@dimen/margin_8"
            app:srcCompat="@drawable/ic_build_black_24dp" />

        <TextView
            android:id="@+id/tv_pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_toEndOf="@id/iv_pp"
            android:alpha="0.5"
            android:text="Phuong phap:mat thuong bang tay" />

        <ImageView
            android:id="@+id/v_rq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pp"
            android:layout_marginEnd="@dimen/margin_8"
            app:srcCompat="@drawable/ic_beenhere_black_24dp" />

        <TextView
            android:id="@+id/tv_requitement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pp"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_toEndOf="@id/v_rq"
            android:alpha="0.5"
            android:text="Yeu cau: Đầy đủ giấy ở các ngăn, lắp đúng chiều, dễ lấy	" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">


            <ImageView
                android:id="@+id/iv_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                app:srcCompat="@drawable/ic_smiling" />

            <ImageView
                android:id="@+id/iv_unhapy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                app:srcCompat="@drawable/ic_unhappy" />

            <ImageView
                android:id="@+id/iv_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_8"
                app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

            <CheckBox
                android:id="@+id/cb_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:clickable="false"
                android:scaleX="1.7"
                android:scaleY="1.7"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cb_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:button="@drawable/ic_clear_black_24dp"
                android:clickable="false"
                android:scaleX="1.7"
                android:scaleY="1.7" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>