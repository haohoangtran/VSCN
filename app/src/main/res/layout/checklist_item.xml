<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:text="Giay ve sinh" />

    <TextView
        android:id="@+id/tv_pp"
        android:layout_width="wrap_content"

        android:layout_marginBottom="@dimen/margin_8"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:text="Phuong phap:mat thuong bang tay" />

    <TextView
        android:id="@+id/tv_requitement"
        android:layout_width="wrap_content"

        android:layout_marginBottom="@dimen/margin_8"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pp"
        android:text="Yeu cau: Đầy đủ giấy ở các ngăn, lắp đúng chiều, dễ lấy	" />

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_good"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2" />

        <CheckBox
            android:id="@+id/cb_bad"
            android:layout_width="wrap_content"
            android:background="@drawable/checkboxbad"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2" />
    </LinearLayout>

</RelativeLayout>